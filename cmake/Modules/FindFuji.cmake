if (FUJI_LIBRARIES AND FUJI_INCLUDE_DIRS)
  set (FUJI_FOUND TRUE)
endif (FUJI_LIBRARIES AND FUJI_INCLUDE_DIRS)

find_package(OpenGL REQUIRED)
find_package(OggVorbis REQUIRED)
find_package(PortAudio REQUIRED)
find_path(FUJI_INCLUDE_DIR Fuji/Fuji.h)
find_library(FUJI_LIBRARY NAMES Fuji_Debug)

mark_as_advanced(FUJI_INCLUDE_DIR FUJI_LIBRARY)

if (FUJI_INCLUDE_DIR AND FUJI_LIBRARY)
  set(FUJI_FOUND TRUE)
  set(FUJI_LIBRARIES ${FUJI_LIBRARY} ${OpenGL_LIBRARIES} ${OggVorbis_LIBRARIES} ${PortAudio_LIBRARIES})
  set(FUJI_INCLUDE_DIRS ${FUJI_INCLUDE_DIR})
  set(CMAKE_REQUIRED_LIBRARIES_TMP ${CMAKE_REQUIRED_LIBRARIES})
  set(CMAKE_REQUIRED_LIBRARIES ${CMAKE_REQUIRED_LIBRARIES} ${FUJI_LIBRARIES})
endif (FUJI_INCLUDE_DIR AND FUJI_LIBRARY)
message(STATUS "Found Fuji: ${FUJI_LIBRARIES}")
if (FUJI_FOUND)
  if (NOT Fuji_FIND_QUIETLY)
    message(STATUS "Found Fuji: ${FUJI_LIBRARIES}")
  endif (NOT Fuji_FIND_QUIETLY)
else (FUJI_FOUND)
  if (NOT Fuji_FIND_REQUIRED)
    message(FATAL_ERROR "Could NOT find Fuji Libraries")
  endif (NOT Fuji_FIND_REQUIRED)
  if (NOT Fuji_FIND_QUIETLY)
    message(STATUS "Could Not find Fuji libraries")
  endif (NOT Fuji_FIND_QUIETLY)
endif (FUJI_FOUND)

